[Unit]
Description=Last Man Standing Telegram Bot
After=network.target

[Service]
Type=simple
User=raspberrypi
WorkingDirectory=/home/raspberrypi/last_man_standing_bot
Environment=PATH=/home/raspberrypi/last_man_standing_bot/.venv/bin
ExecStart=/home/raspberrypi/last_man_standing_bot/.venv/bin/python run_bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
